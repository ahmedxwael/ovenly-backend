{
  "name": "ovenly-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "generate-routes": "node scripts/generate-routes.js",
    "build": "node scripts/generate-routes.js && node esbuild.config.js && tsc-alias -p tsconfig.json && copyfiles -u 1 src/public/**/* dist",
    "vercel-build": "yarn build",
    "vercel:dev": "vercel dev",
    "vercel:build": "vercel build",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "lint": "eslint \"src/**/*.ts\""
  },
  "keywords": [
    "ovenly",
    "backend"
  ],
  "author": "Ahmed Wael",
  "license": "MIT",
  "description": "Ovenly Backend API",
  "dependencies": {
    "@types/serve-favicon": "^2.5.7",
    "bcrypt": "^6.0.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^7.0.0",
    "mongoose": "^8.19.3",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.6",
    "serve-favicon": "^2.5.1",
    "tsconfig-paths": "^4.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/config": "^3.3.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.12",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.27.0",
    "glob": "^11.0.3",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vercel": "^48.10.2"
  }
}
