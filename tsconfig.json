{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src/**/*.ts", "api/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
